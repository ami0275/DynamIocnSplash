<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amitraj.dynamiocnsplash">
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DynamIocnSplash">
        android:networkSecurityConfig="@xml/network_security_config"
        <activity
            android:name=".MainActivityDynamic"
            android:exported="true"
            android:theme="@style/Theme.DynamIocnSplash"
            />
        <!-- ^^^^ If targetActivity is .MainActivity, MainActivity itself should be exported if other apps could potentially launch it,
             or if it's the sole target of exported aliases. Set to false if only launched internally or by non-exported aliases.
             Given your aliases are exported and are launchers, .MainActivity should be exported=true. -->

        <!-- Default icon (ENABLED) -->
        <activity-alias
            android:name=".alias.Default"
            android:enabled="true"
            android:exported="true"
            android:icon="@mipmap/ic_launcher"
            android:targetActivity=".MainActivityDynamic">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Halloween (DISABLED) -->
        <activity-alias
            android:name=".alias.Halloween"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_halloween"
            android:label="@string/app_name1"
            android:targetActivity=".MainActivityDynamic">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Sale (DISABLED) -->
        <activity-alias
            android:name=".alias.Sale"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_sale"
            android:label="@string/app_name2"
            android:targetActivity=".MainActivityDynamic">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
    </application>

</manifest>

